# shell colors
OS=$(uname)
if [[ $OS == 'Darwin' ]]
then
  alias ls='ls -G'
  alias ip='ip --color=auto'
else
  alias ls='ls --color=auto'
fi
alias l='ls -l'
alias ll='ls -al'
alias grep='grep --color=auto'
