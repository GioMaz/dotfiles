syntax on
set number
set relativenumber
set errorbells
set incsearch
set nowrap
set linebreak
set wildmenu
set expandtab
set exrc
set clipboard=unnamedplus
set backspace=2
set nohlsearch
set ruler
set encoding=UTF-8
set splitbelow
set nofixendofline
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set noswapfile

nnoremap <C-h>  :wincmd h<CR>
nnoremap <C-j>  :wincmd j<CR>
nnoremap <C-k>  :wincmd k<CR>
nnoremap <C-l>  :wincmd l<CR>

nnoremap <C-s>  :Sex<CR>
nnoremap <C-c>  :Vex<CR>
nnoremap <C-f>  :Explore<CR>
nnoremap <C-t>  :terminal<CR>

map Q <Nop>
